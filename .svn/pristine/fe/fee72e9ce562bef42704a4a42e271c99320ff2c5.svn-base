@import '../../common/common.wxss';
page{
  background-color: #F7F9FA;
}
.tab-wrap{
  background-color: #fff;
  margin-top: 20rpx;
}
.tab-wrap .title{
  padding: 18rpx 0 18rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}
.tab-wrap .title .icon{
  display: inline-block;
  width: 7rpx;
  height: 30rpx;
  background-color: #2A7AD7;
  vertical-align: middle;
}
.tab-wrap .title text{
  font-size: 30rpx;
  color:#2a7ad7;
  margin-left: 5rpx;
}
.tab-wrap .content{
  padding: 22rpx 30rpx;
}
.tab-wrap .content.last-content{
  margin-bottom: 120rpx;
}
.tab-wrap .content .info-row .label{
  color: #333;
  font-size: 28rpx;
}
.tab-wrap .content .info-row .value{
  color: #7D9AB6;
  font-size: 28rpx;
}
.tab-wrap .content .info-row{
  overflow: hidden;
}
.tab-wrap .content .info-row .left,
.tab-wrap .content .info-row .right{
  float: left; 
}
.tab-wrap .info-img image{
  width: 220rpx;
  height: 150rpx;
  margin-right: 10rpx;
}

/* 右边按钮 */
.right-btn .no-active{
  position: fixed;
  top: 50%;
  right:20rpx;
  display: flex;
  align-items: center;
}
.right-btn .active{
  position: fixed;
  top: 50%;
  right:20rpx;
  margin-top: -183rpx;
  display: flex;
  align-items: center;
}
.right-btn .btn-wrap{
  margin-right: 20rpx;
  z-index: 9999;
} 
.right-btn .btn-wrap .btn{
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  background-color: rgba(231, 169, 22, 0.9);
  border: 3rpx solid #fff;
  box-shadow:2rpx 2rpx 9rpx rgba(231, 169, 22, 0.5), -2rpx -2rpx 9rpx rgba(231, 169, 22, 0.5),2rpx -2rpx 9rpx rgba(231, 169, 22, 0.5),-2rpx 2rpx 9rpx rgba(231, 169, 22, 0.5); 
  text-align: center;
  color: #fff;
  line-height: 70rpx;
  font-size: 30rpx;
  margin-bottom: 28rpx;
}
.right-btn .btn-wrap .btn.blue{
  background-color: rgba(42,122,215,0.9);
  box-shadow:2rpx 2rpx 9rpx rgba(42,122,215, 0.5), -2rpx -2rpx 9rpx rgba(42,122,215, 0.5),2rpx -2rpx 9rpx rgba(42,122,215, 0.5),-2rpx 2rpx 9rpx rgba(42,122,215, 0.5); 
}
.right-btn .iron{
  width: 35rpx;
  height: 40rpx;
  background-color: rgba(226, 226, 226, 0.84);
  line-height: 30rpx;
  text-align: center;
  border-radius: 5rpx;
  
}
.right-btn .iron .iconfont{
  font-size: 20rpx;
  color: #333;
}