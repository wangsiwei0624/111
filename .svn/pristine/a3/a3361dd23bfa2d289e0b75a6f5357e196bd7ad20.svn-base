@import '../../../static/icon/iconfont.wxss';

page{
  height: 100%;
}
.page{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.banner{
  flex: 1;
}
.bindbanner{
  width: 507rpx;
  height: 108rpx;
  margin: 210rpx 112rpx;
}

#wux-form .wux-cell-group__bd::after{
  border-top-width: 0rpx !important;
  border-bottom-width: 0rpx !important;
}
#wux-form .username input{
  height: 80rpx;
  width: 85%;
  margin: 0 auto;
  border-bottom: 1rpx solid #dddddd; 
}
#wux-form .username wux-input::placeholder{
  color: #eeeeee !important;
  font-size: 3.7vw !important;
}
#wux-form .password{
  display: flex;
  height: 80rpx;
  width: 85%;
  margin: 0 auto;
  border-bottom: 1rpx solid #dddddd;
  position: relative;
}
#wux-form .password input{
  height: 80rpx;
  width: 500rpx;
  /* margin-left: 7.5%; */
}
#wux-form .password .iconfont{
  height: 22rpx;
  width: 33rpx;
  position: absolute;
  bottom: 35rpx;
  left: 518rpx;
  font-size: 32rpx;
  color: #9FB2C9;
  z-index: 100;
}

#wux-form .password .icondenglu-yanjingzhengyan{
  font-size: 38rpx !important;
}

.btn-area{
  margin-top: 109rpx;
}
.button{
  width: 525rpx;
  height: 88rpx;
  background: #2A7AD7;
  border-radius: 49rpx;
  color: #ffffff;
  font-size: 32rpx;
}
.footer{
  height: 90rpx;
  /* position: relative; */
  display: flex;
}
.footer text{
  line-height: 90rpx;
  color:#9FB2C9;
  margin-left: 30%;
  display: flex;
} 
.footer .iconfont {
  color: #9FB2C9;
  line-height: 90rpx; 
  margin-left:10rpx;
  margin-top:10rpx;
  display: flex; 
}