@import '../../common/common.wxss';

page{
  height: 100%;
} 
.page{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.head-img{
  height: 240rpx;
  width: 100%;
}
.banner{
  position: relative;
  flex: 1;
}
.banner-h4{
  display: flex;
  font-size: 42rpx;
  text-align:center;
  justify-content:center;
  margin-top: 40rpx;

}
.banner-content{
  height: 330rpx;
  width: 650rpx;
  border-radius: 10rpx;
  border: 1rpx dashed #cccccc;
  display: flex;
  margin-left: 50rpx;
  margin-top: 25rpx;
}
.banner-content-in{
  height: 279rpx;
  width: 600rpx;
  margin: 20rpx 25rpx;
}
.bc-text{
  font-size: 28rpx;
  line-height: 48rpx;
  font-family:PingFangSC;
}
.banner-qrcode{
  /* position: relative;
  top: 519rpx;
  left: 260rpx; */
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
}
.qrcode-img{
  display: flex;
  justify-content:center;
  margin: 0 auto;
  height: 212rpx;
  width: 212rpx;
}
.qrcode-p{
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #9FB2C9;
  text-align: center;
}
.banner-phone{
  height: 110rpx;
  width: 110rpx;
  border-radius: 50%;
  background: #1EC725;
  position: fixed;
  bottom: 153rpx;
  right: 50rpx; 
  box-shadow:0px 2px 11px 0px rgba(30,199,37,0.5);
}
.banner-phone .iconfont{
  color: #ffffff;
  line-height: 110rpx;
  margin-left:29rpx; 
  font-size: 51rpx;
}
.footer{
  height: 110rpx;
  width: 100%;
}
.footer text{
  display: flex;
  flex-direction: column;
  color: #9FB2C9;
  font-size: 24rpx;
  line-height: 43rpx;
  text-align: center;
}

