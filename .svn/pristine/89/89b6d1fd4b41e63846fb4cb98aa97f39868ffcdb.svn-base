<view class="page">
  <view class="banner">
    <view class="hd">
      <image src="../../static/images/bind1.png" class="bindbanner"></image>
    </view>
    <wux-form id="wux-form" >
      <wux-cell-group>
        <wux-cell hover-class="none">
          <wux-field name="user" class="user">
            <wux-input placeholder="请输入手机号"/>
          </wux-field>
        </wux-cell>
      </wux-cell-group>
      <wux-cell-group>
        <wux-cell hover-class="none">
          <wux-field name="password" class="password">
            <wux-input placeholder="请输入验证码"/>
            <button class="yzm" bindtap="get">获取验证码</button>
          </wux-field>
        </wux-cell>
      </wux-cell-group>
      <view class="btn-area">
        <button bindtap="onSubmit" class="button">登录</button>
      </view>
    </wux-form>
  </view>
  <view class="footer" bindtap="toPassword">
    <p>使用账号密码登陆</p>
    <image src="../../static/images/jiantou.svg" class="fimg"></image>
  </view>
</view>
