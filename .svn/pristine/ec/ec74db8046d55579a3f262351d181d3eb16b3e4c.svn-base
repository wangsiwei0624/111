/* pages/components/user-selector/index.wxss */
@import '../../../static/icon/iconfont.wxss';

.input-contaner {
  background: rgba(255, 255, 255, 1);
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 80rpx;
  position: relative;
}

.input-contaner .input-box-contaner {
  height: 50rpx;
  border-radius: 40rpx;
  padding: 15rpx 50rpx 15rpx 50rpx;
  overflow: hidden;
  border: 1px solid rgba(221, 221, 221, 1);
}

.user-selector .select-contaner .input-box-contaner {
  width: calc(100% - 168rpx);
  padding: 15rpx 30rpx 15rpx 50rpx;
}

.user-selector .select-contaner .input-box-contaner.expand {
  height:auto;
  border-radius: 15rpx;
}

.input-box-contaner .input-box {
  text-align: left;
  font-size:28rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height: 51rpx;
}

.input-box-contaner .input-box.placeholder {
  color:#999999;
}
.left-icon {
  position: absolute;
  left: 15rpx;
  top:0px;
  color: #bfcedd;
  font-size: 25rpx;
}
.right-icon {
  color: #bfcedd;
  position: absolute;
  right: 20rpx;
  top:0px;
  font-size: 25rpx;
}

.user-selector .select-contaner .expand-icon{
  right: 110rpx;
}
.user-selector .select-contaner .expand .expand-icon {
  transform: rotate(90deg);
}
.user-selector .select-icon {
  color: #2a7ad7;
  position: absolute;
  right: 0rpx;
  font-size: 51rpx;
  top: 0px;
}

/** 通讯录  start***/
.user-page {
  z-index: 10000;
  background-color: #fff;
  position: fixed;
  left: 0px;
  right: 0px;
  top: 0px;
  bottom: 0px;
}
.user-page-header,
.user-page-body,
.user-page-footer {
  margin: 0rpx 30rpx;
}
.user-page-header {
  height: 180rpx;
  border-bottom: 1px solid #EFEFEF;
}
.user-page-body {
  overflow: auto;
  position: absolute;
  left: 0px;
  right: 0px;
  top: 180rpx;
  bottom: 98rpx;
}
.user-page-footer {
  position: absolute;
  bottom: 0px;

  height: 98rpx;
  border-top: 1px solid #EFEFEF;
}

.user-page .org-select .org-unit {
  margin-right: 15rpx;
}
.user-page .org-select .org-dept {
  margin-left: 15rpx;
}
/** 通信录 end **/