// pages/phone/phone.js
var phoneApi = require("../../../../api/sendSM.js")
var loginApi = require("../../../../api/loginSM.js")
var env = require("../../../../config/host.js")
var utils = require("../../../../lib/utils.js")
var app = getApp();

Page({

  /**
   * 页面的初始数据
   */
  data: {
    phoneNum: '',
    phoneCode: '',
    timeText: true,
    codeonoff: true,
    time: 61,
    fromAuth: false
  },
  
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    this.setData({
      fromAuth: options.webAuth
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },
  onUserChange:function(e) {
    this.setData({
      phoneNum: e.detail.value
    })
  },
  onCodeChange: function (e) {
    this.setData({
      phoneCode: e.detail.value
    })
  },
  //获取验证码
  onCode:function() {
    const data = {
      phone: this.data.phoneNum,
    }
    // const phone = data.phone
    //手机号码正则表达式
    const regular = /^1([38][0-9]|4[579]|5[0-3,5-9]|6[6]|7[0135678]|9[89])\d{8}$/
    console.log(data.phone)
    if (regular.test(data.phone)) {
      phoneApi.report(data).then((res) => {
        console.log(res)
        if(res.code == 200){
          wx.showToast({
            title: '获取验证码成功',
            icon: 'none'
          })
          let time = this.data.time
          // let codeonoff = res.data.codeonoff
          // let over = this.data.over
          // console.log(over)
          var timer = setInterval(() => {
            console.log(time)
            if(time == 0 || this.data.codeonoff == false){
              clearInterval(timer)
              this.setData({
                time: 61,
                // over: 5,
              })
            }else{
              this.setData({
                time: --time,
                timeText: false,
              })
              if (time <= 0) {
                this.setData({
                  timeText: true,
                })
              }
            }
          },1000)
        }else{
          wx.showToast({
            title: res.msg,
            icon: 'none'
          })
        }
      })
    }else{
      wx.showToast({
        title: '手机号码不正确',
        icon:'none'
      })
    }
  },

  //登陆
  onSubmit:function() {
    wx.showLoading({
      title: '登录中',
      mask: true
    })
    const data = {
      phone: this.data.phoneNum,
      sms: this.data.phoneCode,
      domain: app.globalData.domain,
    }
    loginApi.report(data).then((res) => {
      console.log(res)
      wx.hideLoading()
      if (res.code === 200) {
        app.doGetOrgUserInfo().then(res => {
          this.setData({
            codeonoff: false,
          })
          wx.reLaunch({
            url: '/pages/login/login',
          })
        }).catch(err => {
          wx.showToast({
            title: '认证失败，请稍后重试',
            icon: 'error'
          })
        });
      } else {
        wx.showToast({
          title: res.msg || '账号或密码错误',
          icon: 'none'
        })
      }
    }).catch(err => {
      console.log(err);
      wx.showToast({
        title: '服务繁忙',
        icon: 'none'
      })
    });
  },

  //跳转
  toPassword: function () {
    wx.redirectTo({
      url: '/pages/mine/bind/index',
    })
  }
})