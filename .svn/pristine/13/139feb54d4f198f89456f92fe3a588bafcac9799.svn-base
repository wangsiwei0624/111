page{
  height: 100%;
}
.page{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.page__hd{
  flex: 1;
  overflow: auto;
}
.hd-banner-img{
  height: 300rpx;
  width: 100%;
}
.hd-layout{
  height: 330rpx;
  width: 100%;
}
.hd-layout-col1 .placeholder{
  height: 150rpx;
  width: 340rpx;
  background: #2ABDAE;
  margin-top: 20rpx;
  margin-left: 30rpx;
  border-radius: 10rpx;
  position: relative;
}
.hd-layout-col2 .placeholder{
  height: 150rpx;
  width: 340rpx;
  background: #C63D51;
  margin-top: 20rpx;
  margin-left: 10rpx;
  border-radius: 10rpx;
  position: relative;
}
.hd-layout-col3 .placeholder{
  height: 150rpx;
  width: 340rpx;
  background: #2762D2;
  margin-top: 10rpx;
  margin-left: 30rpx;
  border-radius: 10rpx;
  position: relative;
}
.hd-layout-col4 .placeholder{
  height: 150rpx;
  width: 340rpx;
  background: #D9881A;
  margin-top: 10rpx;
  margin-left: 10rpx;
  border-radius: 10rpx;
  position: relative;
}
.placeholder text{
  font-size: 28rpx;
  color: #ffffff; 
  position: absolute;
  top: 56rpx;
  left: 153rpx;
}
.placeholder .iconfont{
  color: #ffffff;
  font-size: 56rpx;
  position: absolute;
  top: 48rpx;
  left: 76rpx;
}

.page__bd{
  box-shadow:0px -2rpx 5rpx 0rpx rgba(0,0,0,0.1);
}

