@import '../../common/common.wxss';

page{
  height: 100%;
}
.page{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.head-img{
  height: 240rpx;
  width: 100%;
}
.banner{
  position: relative;
  flex: 1;
}
.banner-h4{
  font-size: 42rpx;
  position: absolute;
  top: 40rpx;
  left: 165rpx;
}
.banner-content{
  height: 330rpx;
  width: 650rpx;
  border-radius: 10rpx;
  position: absolute;
  border: 1rpx dashed #cccccc;
  top: 120rpx;
  left: 50rpx;
}
.banner-content-in{
  height: 279rpx;
  width: 586rpx;
  margin: 20rpx 45rpx;
}
.bc-text{
  font-size: 28rpx;
  line-height: 48rpx;
  font-family:PingFangSC;
}
.banner-qrcode{
  position: absolute;
  top: 519rpx;
  left: 260rpx;
  display: flex;
  flex-direction: column;
}
.qrcode-img{
  height: 212rpx;
  width: 212rpx;
}
.qrcode-p{
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #9FB2C9;
  text-align: center;
}
.banner-phone{
  height: 110rpx;
  width: 110rpx;
  border-radius: 50%;
  background: #1EC725;
  position: absolute;
  top: 687rpx;
  right: 50rpx; 
}
.banner-phone .iconfont{
  color: #ffffff;
  line-height: 110rpx;
  margin-left:29rpx; 
  font-size: 51rpx;
}
.footer{
  height: 110rpx;
  width: 100%;
}
.footer text{
  display: flex;
  flex-direction: column;
  color: #9FB2C9;
  font-size: 24rpx;
  line-height: 33rpx;
  text-align: center;
}

